scchart Traffic_Simulation {
	input int mode;
	input bool pedNS, pedWE, t1, t2, t3, t4, t5, t6;
	region traffic1:
		initial state RNRW --> RNGW with t1;
    	state RNGW --> RNYW with t2;
    	state RNYW --> RNRW with t3;
    	state RNRW --> GNRW with t4;
    	state GNRW --> YNRW with t5;
    	state YNRW --> RNRW with t6;
}