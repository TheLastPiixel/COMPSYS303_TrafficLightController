scchart Traffic_Simulation {
	input int mode;
	input bool pedNS, pedWE, t1, t2, t3, t4, t5, t6;
	region traffic:
		initial state A{
			initial state RR --> RG with t1;
	    	state RG --> RY with t2;
	    	state RY --> RR with t3;
	    	state GR --> YR with t5;
	    	state YR --> RR with t6;
	}
	--> B with mode ==2;
	state B;
		
}