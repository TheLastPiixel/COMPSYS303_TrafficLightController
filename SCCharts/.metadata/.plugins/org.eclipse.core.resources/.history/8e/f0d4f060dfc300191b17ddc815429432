scchart Traffic_Simulation {
	input int mode;
	input bool pedNS, pedWE, t1, t2, t3, t4, t5, t6;
	
    region mode_1:
    	initial state RR;
    		--> RG with t1;
    	goto RG;
    		--> RY with t2;
    	goto RY;
    		--> RR with t3;
    	goto RR;
    		--> GR with t4;
    	goto GR;
    		--> YR with t5;
    	goto YR;
    		--> RR with t6;
}