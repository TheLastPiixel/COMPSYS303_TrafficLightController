scchart mode_1 {
  	input bool t1, t2, t3, t4;
  	output string result;
  	region mode1:
		initial state RR{ entry / result = "RR" } --> RG with t1 --> GR with t4;
		state RG{ entry / result = "RG" } --> RY with t2;
		state RY{ entry / result = "RY" } --> RR with t3;
		state GR{ entry / result = "GR" } --> YR with t2;
		state YR{ entry / result = "YR" } --> RR with t3;
}